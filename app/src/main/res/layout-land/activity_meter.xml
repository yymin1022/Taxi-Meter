<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#ff000000"
    tools:context=".MeterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_meter_start"
                android:onClick="startCount"
                android:text="운행 시작"
                android:textSize="15sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_meter_stop"
                android:onClick="stopCount"
                android:text="운행 종료"
                android:textSize="15sp"/>

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_meter_outcity"
                android:gravity="center"
                android:id="@+id/isOuterCity"
                android:textOff="시외할증 미적용"
                android:textOn="시외할증 적용"
                android:textSize="15sp"
                android:textColor="#ff000000" />

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/btn_meter_night"
                android:gravity="center"
                android:id="@+id/isNight"
                android:textOff="심야할증 미적용"
                android:textOn="심야할증 적용"
                android:textSize="15sp"
                android:textColor="#ff000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요금 방식"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvType"
                android:text="기본요금"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 속도"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSpeed"
                android:text="0"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동 시간"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:text="0"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동 거리"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDistance"
                android:text="0"
                android:textSize="25sp"
                android:textColor="#ffd3d3d3" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meter_image_horse"
            android:background="@drawable/ic_horse_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCost"
            android:gravity="right"
            android:text="0"
            android:textSize="80sp"
            android:textColor="#ffd3d3d3"/>

    </LinearLayout>

</LinearLayout>